<h2>Create new rating</h2>

<%= form_for(@rating) do |form| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.select :beer_id,
      options_from_collection_for_select(@beers, :id, :to_s, selected: @rating.beer_id), {},
      class: "form-control"
    %>
  </div>
  <div class="form-group">
    <%= form.label :score %>
    <%= form.number_field :score,
      class: "form-control",
      placeholder: "Enter score from 1 to 50"
    %>
  </div>
  <%= form.submit class: "btn btn-primary" %>

<% end %>
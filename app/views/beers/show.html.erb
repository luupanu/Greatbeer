<h2><%= @beer.name %></h2>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= link_to @beer.brewery.name, @beer.brewery %>
</p>

<% if @beer.average_rating %>
  <p>
    <strong>Average rating:</strong>
    <%= @beer.average_rating %>
    <i>(Rated <%= pluralize(@beer.ratings.count, 'time') %>)</i>
  </p>
<% else %>
  <p><i>This beer has not yet been rated.</i></p>
<% end %>

<% if current_user %>
  <h4>give a rating:</h4>

  <%= form_for(@rating) do |form| %>
    <%= form.hidden_field :beer_id %>
    score: <%= form.number_field :score %>
    <%= form.submit class:"btn btn-primary" %>
  <% end %>
  <br/>

  <%= link_to 'Edit', edit_beer_path(@beer) %> |
  <%= link_to 'Delete', @beer, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', beers_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>average</th>
    </tr>
  </thead>

  <tbody>
    <% if top %>
      <% top.each do |item| %>
        <tr>
          <td><%= link_to item.name, item %></td>
          <td><%= round(item.average_rating) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
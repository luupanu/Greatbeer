<h1>Breweries</h1>

<% cache "brewerylist", skip_digest: true do %>

  <h2>Active</h2>
  <p>Number of active breweries: <%= @active_breweries.size %></p>
  <%= render 'list', breweries: @active_breweries %>

  <h2>Retired</h2>
  <p>Number of retired breweries: <%= @retired_breweries.size %></p>
  <%= render 'list', breweries: @retired_breweries %>

<% end %>

<br>

<%= link_to 'New brewery', new_brewery_path if current_user %>

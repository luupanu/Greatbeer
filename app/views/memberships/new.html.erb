<h2>Join a club</h2>

<% if @beer_clubs.empty? %>
    <p>Wow, you're already a part of all the clubs ðŸ˜±</p>
<% else %>

  <%= form_for(@membership) do |form| %>
    <% if @membership.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@membership.errors.size, "error") %> prohibited from joining this club:</h2>

        <ul>
        <% @membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.select :beer_club_id,
        options_from_collection_for_select(@beer_clubs, :id, :name, selected: @beer_club_id), {},
        class: "form-control"
      %>
    </div>

    <br/>

    <%= form.submit "Join", class: "btn btn-primary" %>
  <% end %>
<% end %>
<h2>Join a club</h2>

<% if @beer_clubs.empty? %>
    <p>Wow, you're already a part of all the clubs ðŸ˜±</p>
<% else %>

  <%= form_for(@membership) do |form| %>
    <% if @membership.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@membership.errors.count, "error") %> prohibited from joining this club:</h2>

        <ul>
        <% @membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :name, selected: @beer_club_id) %>
    <%= form.submit "Join" %>
  <% end %>
<% end %>
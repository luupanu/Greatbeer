<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>ratings</th>
    </tr>
  </thead>

  <tbody>
    <% if top %>
      <% top.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <td><%= user.ratings.size %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>